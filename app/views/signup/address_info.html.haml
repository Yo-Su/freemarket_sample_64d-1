.signup-container
  = render partial: 'header'


  .fourth-main
    .fourth-main__content
      .fourth-main__content__title
        発送元・お届け先住所入力
      = form_with model: @address, url: credit_info_signup_index_path, method: :get, local: true, html: {class: 'fourth-main__content__box'} do |f|
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              お名前
            .fourth-main__content__box__group__tag__form-require
              必須
          = f.text_field :last_name, placeholder: '例) 山田', class: "fourth-main__content__box__group__form"
          = f.text_field :first_name, placeholder: '例）彩', class: "fourth-main__content__box__group__form"
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              お名前カナ
            .fourth-main__content__box__group__tag__form-require
              必須
          = f.text_field :last_name_kana, placeholder: '例) ヤマダ', class: "fourth-main__content__box__group__form"
          = f.text_field :first_name_kana, placeholder: '例) アヤ', class: "fourth-main__content__box__group__form"
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              郵便番号
            .fourth-main__content__box__group__tag__form-require
              必須
          = f.text_field :post_number, placeholder: '例) 123-4567', class: "fourth-main__content__box__group__form"
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              都道府県
            .fourth-main__content__box__group__tag__form-require
              必須
          = f.select :prefecture, Item.from_delivery_areas.keys,{prompt: "北海道"}, class: "fourth-main__content__box__group__select"
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              市区町村
            .fourth-main__content__box__group__tag__form-require
              必須
          = f.text_field :municipality, placeholder: '例) 横浜市緑区', class: "fourth-main__content__box__group__form"
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              番地
            .fourth-main__content__box__group__tag__form-require
              必須
          = f.text_field :block, placeholder: '例) 青山1-1-1', class: "fourth-main__content__box__group__form"
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              建物名
            .fourth-main__content__box__group__tag__form-require#optional
              任意
          = f.text_field :building, placeholder: '例) 柳ビル103', class: "fourth-main__content__box__group__form"
        .fourth-main__content__box__group#margin_top
          .fourth-main__content__box__group__tag
            .fourth-main__content__box__group__tag-name
              電話
            .fourth-main__content__box__group__tag__form-require#optional
              任意
          = f.text_field :phone_number, placeholder: '例) 09012345678', class: "fourth-main__content__box__group__form"
          
        
        .fourth-main__content__box__group#margin_top
          = f.submit value: "次へ進む", class: "fourth-main__content__box__group__submit"
          


  = render partial: 'footer'
