            %ul
            %li
              = link_to "#" do
                = icon 'fab', 'twitter'
            %li
              = link_to "#" do
                = icon 'fab', 'facebook-square'
      .footer-top__content
        %h2 ヘルプ＆ガイド
        %ul
          %li
            = link_to "メルカリガイド", "#"
          %li
            = link_to "らくらくメルカリ便", "#"
          %li
            = link_to "ゆうゆうメルカリ便", "#"
          %li
            = link_to "大型メルカリ便", "#"
          %li
            = link_to "車体取引ガイド", "#"
          %li
            = link_to "メルカリあんしん・あんぜん宣言！", "#"
          %li
            = link_to "偽ブランド品撲滅への取り組み", "#"
          %li
            = link_to "メルカリボックス", "#"
