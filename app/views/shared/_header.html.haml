.header
  .header-top
    %h1
      = link_to root_path do
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3135490372", width: "150px"}
    .fuzzy_search
      = form_with url: search_items_path, method: :get, local: true do |f|
        = f.text_field :keyword, class:"fuzzy_search__field", placeholder:"何かお探しですか？"
        = f.label :search, class: "fuzzy_search__label" do
          = icon 'fas', 'search', class: "fuzzy_search__label--icon"
          = f.submit 'search', :name => nil,class:"fuzzy_search__label--btn"
        -# = text_field_tag :search, "",class:"fuzzy_search__field",placeholder:"何かお探しですか？"
  .header-bottom
    .header-bottom__left
      %ul.header-bottom__left__list
        %li.header-bottom__left__list__category
          %h2.header-bottom__left__list__category_field
            = link_to do
              = icon 'fas', 'list-ul', class: "icon-red"
              %span カテゴリーから探す
        %li
          %h2
            = link_to "#" do
              = icon 'fas', 'tag', class: "icon-red"
              %span ブランドから探す
    .header-bottom__right
      %ul
        - if user_signed_in?
          %li
            = link_to "#" do
              = icon 'fas','heart', class: "icon-gray"
              %span いいね一覧
          %li
            = link_to "#" do
              = icon 'fas', 'bell', class: "icon-gray"
              %span お知らせ
          %li
            = link_to "#" do
              = icon 'fas', 'check', class: "icon-gray"
              %span やることリスト
          %li
            = link_to user_path(1) do
              %span マイページ
        - else
          -# スプリングレビュー後に下記を削除
          %li
            %button
              = link_to "新規会員登録", signup_index_path,class: "header-bottom__right__link1"
          %li
            %button
              = link_to "ログイン", new_user_session_path,class: "header-bottom__right__link2"
              
              