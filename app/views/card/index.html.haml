= render "./shared/header"
.main
  .main-box
    .card-main
      .contents-add-input
        .add-head
        %h2
          クレジットカード情報入力
        .add-bottom
          .add-bottom-form
            .form-group
              %label
                カード番号
              %span
                必須
              .name-first
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              .card-list
                %ul
                  %li 
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?82960919", size: "49x20",alt:"visa"
                  %li 
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?82960919", size: "34x20",alt:"master"
                  %li 
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?82960919", size: "30x20",alt:"saison"
                  %li 
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?82960919", size: "21x20",alt:"visa"
                  %li 
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?82960919", size: "32x20",alt:"dinersclub"
                  %li 
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?82960919", size: "32x20",alt:"discover"
            .form-group
              %label
                有効期限
                %span
                  必須
              .select-wrap
                .select-wrap-half
                  %select#exp_month{name: "exp_month", type: "text"}
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %optn{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %i.fa.fa-angle-down
                  %p
                    月
                .select-wrap-half
                  %select#exp_year{name: "exp_year", type: "text"}
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %i.fa.fa-angle-down
                  %p
                    年
            .form-group
              %label
                セキュリティコード
              %span
                必須
              .name-first
              = text_field_tag "cvc", "", class:'input-default', placeholder: "カード背面4桁もしくは3桁の番号" ,maxlength: "4", id: "cvc"
              .signup-seqcode
                .signup-seqcode-text
                  ?
                %p
                  カード背面の番号とは？
            .next-button
              #card_token
              = submit_tag "追加する", id: "token_submit",class: 'add-btn'
= render "shared/footer"